<Module code="TGCOMPONENTS" feature="util">
	
	<Component_Add>
		<Code>sfnt_tabbed_video_section</Code>
		<Name>Storefront: Tabs and Video</Name>
		<Descrip>A two column section with a patterned background, button, tabs and video.</Descrip>
		<Allow_Nest>1</Allow_Nest>
	</Component_Add>
	
	<ComponentAttribute_Add component="sfnt_tabbed_video_section">
		<Code>sfnt_tabs_col</Code>
		<Prompt>Tabs Active</Prompt>
		<Type>checkbox</Type>
		<Required>1</Required>
	</ComponentAttribute_Add>
	<ComponentAttribute_Add component="sfnt_tabbed_video_section">
		<Code>sfnt_video_col</Code>
		<Prompt>Video Active</Prompt>
		<Type>checkbox</Type>
		<Required>1</Required>
	</ComponentAttribute_Add>


	<Component_Add>
		<Code>tabs</Code>
		<Name>Tabs</Name>
		<Descrip>Can assign exactly 3 tabs.</Descrip>
		<Allow_Nest>0</Allow_Nest>
	</Component_Add>
	<ComponentAttribute_Add component="tabs">
		<Code>tab_1_label</Code>
		<Prompt>Tab 1: Label</Prompt>
		<Type>text</Type>
		<Required>1</Required>
	</ComponentAttribute_Add>
	<ComponentAttribute_Add component="tabs">
		<Code>tab_1_content</Code>
		<Prompt>Tab 1: Content</Prompt>
		<Type>memo</Type>
		<Required>1</Required>
	</ComponentAttribute_Add>

	<Component_Add>
		<Code>video</Code>
		<Name>Video</Name>
		<Descrip>Video with custom player.</Descrip>
		<Allow_Nest>0</Allow_Nest>
	</Component_Add>

</Module>